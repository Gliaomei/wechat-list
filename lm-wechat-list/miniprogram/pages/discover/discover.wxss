@import "./discover.skeleton.wxss";
.content{
  text-align: justify; 
  display: flex;
}
.left,.right{
  display: inline-block;
  vertical-align: top;
  width: 50%;
}
.item{
  width: 98%;
  background-color: #ECEDEF;
  margin: 2rpx; 
  margin-bottom: 2rpx;
  display: inline-block;
  border: 1px solid #ECEDEF;
  padding-bottom: 24rpx;
}
.item-title-box{
  display: flex;
  position: relative;
  padding: 0 20rpx;
}
.item-title{
  font-size: 24rpx;
  color: #1e1e1e;
  font-weight: 800;
  line-height: 27rpx;
  margin: 15rpx 0rpx;
}
.item .name{
  display: flex;
  flex-direction: column;
  padding: 0 20rpx;
  padding-bottom: 10rpx;
  font-size: 22rpx;
  color: #1e1e1e;
  font-family: 'PingFang SC-Medium';
}
.name-title{
  margin-bottom: 10rpx;
  color: #c4c4c4;
}
.item-img{
  width: 100%
}
